<Window x:Class="RDSync.DeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RDSync"
        mc:Ignorable="d"
        Title="DeviceWindow" Height="450" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label  Grid.Column="0" Grid.Row="0"/>
            <TextBox Text="Hello world" Grid.Column="1" Grid.Row="0"/>
            <Label Grid.Column="0" Grid.Row="1"/>
                <TextBox Text="Hello world" Grid.Column="0" Grid.Row="0"/>
        </Grid>
        <Grid DockPanel.Dock="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ListBox Name="lstRules" Grid.Column="0"></ListBox>
            <Label Content="Rule Description" Grid.Column="1"></Label>
        </Grid>
    </DockPanel>
</Window>
